extends ../layout

block content
  .page-header
    h3 Candidates List
  table#candidateTable.table.table-striped.tablesorter
    thead
      tr
        th Date
        th Photo
        th First name
        th Last name
        th Title
        th Location
        th Resume
        th Portfolio links
    tbody
      each candidate in candidates
        tr
          td #{candidate.dateScanned}
          td: img(src=candidate.picture)
          td #{candidate.firstName}
          td #{candidate.lastName}
          td #{candidate.title}
          td #{candidate.location}
          td: a(href=candidate.resume) Resume link
          td
            each portfolioLink, i in candidate.portfolio
              if portfolioLink
                p: a(href=portfolioLink) Portfolio link #{i}
          td: a(href='/candidate/delete/#{candidate._id}') Delete
