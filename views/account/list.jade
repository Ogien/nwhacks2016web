extends ../layout

block content
  .page-header
    h3 Candidates List
  table.table.table-striped.tablesorter
    thead
      tr 
        th Date
        th Photo
        th First name
        th Last name
        th Title
        th Location
        th Resume
        th Portfolio links
    tbody  
      each candidate in candidates
        tr 
          td #{candidate.dateScanned}
          td: img(src=candidate.picture)
          td #{candidate.firstName}
          td #{candidate.lastName}
          td #{candidate.title}
          td #{candidate.location}
          td: a(href=candidate.resume) Resume link
          td 
            if candidate.portfolio.url1
              p: a(href=candidate.portfolio.url1) Portfolio link 1
            if candidate.portfolio.url2
              p: a(href=candidate.portfolio.url2) Portfolio link 2
            if candidate.portfolio.url3
              p: a(href=candidate.portfolio.url3) Portfolio link 3
