extends layout

block content
  .page-header
    h3 Create your QR
    h6 * Required Fields
  form.form-horizontal(id='qr-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='firstName') First Name *
      .col-sm-8
        input.form-control(type='text', name='firstName', id='firstName', autofocus=true, required)
    .form-group
      label(class='col-sm-2 control-label', for='lastName') Last Name *
      .col-sm-8
        input.form-control(type='text', name='lastName', id='lastName', required)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email *
      .col-sm-8
        input.form-control(type='text', name='email', id='email', required)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title')
    .form-group
      label(class='col-sm-2 control-label', for='location') Location
      .col-sm-8
        input.form-control(type='text', name='location', id='location')
    .form-group
      label(class='col-sm-2 control-label', for='resumeUrl') Resume *
      .col-sm-8
        input.form-control(type='text', name='resume', id='resume', required)
    .form-group
      label(class='col-sm-2 control-label', for='linkedinId') Linked-In URL
      .col-sm-8
        input.form-control(type='text', name='linkedin', id='linkedin' value="ca.linkedin.com/in/")
    .form-group
      label(class='col-sm-2 control-label', for='portfolio') Portfolio Links
      .col-sm-8
        input.form-control(type='text', name='portfolio[0]', id='portfolioLink0')
      .col-sm-8.col-sm-offset-2
        input.form-control(type='text', name='portfolio[1]', id='portfolioLink1')
      .col-sm-8.col-sm-offset-2
        input.form-control(type='text', name='portfolio[2]', id='portfolioLink2')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-qrcode
          | Make My QR-Code
